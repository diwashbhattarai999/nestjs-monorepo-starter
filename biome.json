{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"apps/**/*.{ts,js,json}",
			"packages/**/*.{ts,js,json}",
			"*.{ts,js,json}",
			"biome.json",
			"lefthook.yml",
			"pnpm-workspace.yaml",
			"commitlint.config.cjs",
			"!**/*.spec.ts",
			"!**/test",
			"!**/scripts",
			"!**/node_modules",
			"!**/dist",
			"!**/coverage",
			"!**/.next",
			"!**/build",
			"!**/i18n.generated.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 140
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [":NODE:", ":BLANK_LINE:", ":PACKAGE:", ":BLANK_LINE:", ":ALIAS:", ":BLANK_LINE:", ":PATH:"]
					}
				}
			}
		}
	}
}
