{
	"name": "nest-turbo-starter",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"test": "turbo run test",
		"check-types": "turbo run check-types",
		"clean": "turbo run clean",
		"clean:all": "pnpm -r clean && find . -name '*.tsbuildinfo' -delete && find . -name 'node_modules' -type d -exec rm -rf {} +"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@nestjs/cli": "^11.0.14",
		"lefthook": "^2.0.11",
		"turbo": "^2.6.3",
		"typescript": "5.9.2"
	},
	"packageManager": "pnpm@10.25.0",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.9",
		"@nestjs/core": "^11.1.9",
		"@nestjs/platform-fastify": "^11.1.9",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	}
}
